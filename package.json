{
	"name": "translucent-tiktok",
	"productName": "Translucent Tiktok",
	"version": "0.0.1",
	"description": "Electron app built using SvelteKit and styled with Tailwind",
	"keywords": [],
	"repository": "",
	"homepage": "",
	"bugs": "",
	"author": {
		"email": "rodney@translucenttechnologies.com",
		"name": ""
	},
	"private": true,
	"main": "electron/main.cjs",
	"type": "module",
	"scripts": {
		"dev": "cross-env NODE_ENV=dev npm run dev:all",
		"dev:all": "concurrently -p \"[{time}] [{name}]\" -t \"HH:mm:ss\" -n backend,svelte,electron -c #795695,#FD6937,#07B6D5 -s all \"npm run dev:backend\" \"wait-on tcp:5000 && npm run dev:svelte\" \"wait-on http://localhost:3000 && electron .\"",
		"dev:backend": "call venv\\Scripts\\python.exe backend\\app.py",
		"dev:svelte": "vite dev --host --port 3000",
		"build": "cross-env NODE_ENV=production npm run build:svelte && npm run build:electron",
		"build:svelte": "vite build",
		"build:electron": "electron-builder build --win --publish never",
		"deploy": "cross-env NODE_ENV=production npm run build:svelte && npm run deploy:electron",
		"deploy:electron": "electron-builder build --win --publish always",
		"postinstall": "npm run setup-venv && svelte-kit sync",
		"setup-venv": "python scripts/setup_venv.py && npm run install-deps",
		"install-deps": "cmd /c \"venv\\Scripts\\activate.bat && pip install -r backend/requirements.txt --no-cache-dir\""
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "latest",
		"@sveltejs/kit": "latest",
		"autoprefixer": "^10.4.19",
		"concurrently": "^8.2.2",
		"cross-env": "^7.0.3",
		"dotenv": "^16.4.5",
		"electron": "^29.3.0",
		"electron-builder": "^24.13.3",
		"electron-updater": "^6.1.8",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.37.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.38",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.2",
		"svelte": "^4.2.13",
		"svelte-preprocess": "^5.1.3",
		"tailwindcss": "^3.4.3",
		"vite": "^5.2.8",
		"wait-on": "^7.2.0"
	},
	"dependencies": {
		"electron-context-menu": "^3.6.1",
		"electron-serve": "^1.3.0",
		"electron-store": "^8.2.0",
		"electron-window-state": "^5.0.3"
	}
}
